<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:background="#eff1f7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="Back"
                android:textColor="@color/color_state1"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/iconProfile"
                app:layout_constraintEnd_toEndOf="@+id/iconProfile"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/profile_info"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/iconProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:contentDescription="Menu"
                android:padding="5dp"
                android:src="@drawable/circle_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:tint="#4178e1" />

            <TextView
                android:id="@+id/pname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="User"
                android:textColor="#5a5f73"
                android:textFontWeight="500"
                android:textSize="25dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iconProfile"
                app:layout_constraintVertical_bias="0.029" />

            <TextView
                android:id="@+id/pemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="email"
                android:textColor="#5a5f73"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pname"
                app:layout_constraintVertical_bias="0.0" />

            <!-- Profile Info -->
            <LinearLayout
                android:id="@+id/profile_info"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_state2"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pemail">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/user_pen"
                    app:tint="#5a5f73" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Edit profile information"
                    android:textColor="#5a5f73"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/angle_right"
                    app:tint="#5a5f73" />
            </LinearLayout>

            <!-- Guardian Info -->
            <LinearLayout
                android:id="@+id/guardian_info"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_state2"
                android:paddingVertical="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_info">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/user_pen"
                    app:tint="#5a5f73" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Edit guardian information"
                    android:textColor="#5a5f73"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/angle_right"
                    app:tint="#5a5f73"/>
            </LinearLayout>

            <!-- Password Info -->
            <LinearLayout
                android:id="@+id/password_info"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_state2"
                android:paddingVertical="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/guardian_info">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/lock"
                    app:tint="#5a5f73" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Change password"
                    android:textColor="#5a5f73"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/angle_right"
                    app:tint="#5a5f73"/>
            </LinearLayout>

            <!-- Notification Info -->
            <LinearLayout
                android:id="@+id/notif_info"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_state2"
                android:paddingVertical="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_info">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/bell"
                    app:tint="#5a5f73" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Notification"
                    android:textColor="#5a5f73"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/notif_swtch"
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:thumbTint="@drawable/switch_thumb"
                    android:trackTint="@drawable/switch_track"
                    android:layout_marginRight="30dp" />
            </LinearLayout>

            <!-- Help & Support -->
            <LinearLayout
                android:id="@+id/help_info"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_state2"
                android:paddingVertical="12dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/notif_info">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/interrogation"
                    app:tint="#5a5f73" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Help &amp; Support"
                    android:textColor="#5a5f73"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/angle_right"
                    app:tint="#5a5f73"/>
            </LinearLayout>

            <!-- Contact Us -->
            <LinearLayout
                android:id="@+id/contactus_info"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:background="@drawable/btn_state2"
                android:paddingVertical="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/help_info">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/headset"
                    app:tint="#5a5f73" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="16dp"
                    android:text="Contact us"
                    android:textColor="#5a5f73"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/angle_right"
                    app:tint="#5a5f73"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogoutXML"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_state1"
                android:text="Log out"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/contactus_info"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
