<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#eff1f7"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/harto_logo"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:src="@drawable/harto_logo_blue" />

        <TextView
            android:id="@+id/please_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/pass_reset"
            android:textAlignment="center"
            android:textColor="@color/color_state1"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/edittxtPassReg"
            android:layout_width="311dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:autofillHints="Password"
            android:background="@drawable/edit_txt_bg"
            android:drawableStart="@drawable/lock"
            android:drawableEnd="@drawable/eye"
            android:drawablePadding="10dp"
            android:drawableTint="#5a5f73"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="15dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:textColor="#5a5f73"
            android:textColorHint="#5a5f73"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/edittxtComPassReg"
            android:layout_width="311dp"
            android:layout_height="49dp"
            android:layout_marginTop="8dp"
            android:autofillHints="password"
            android:background="@drawable/edit_txt_bg"
            android:drawableStart="@drawable/unlock"
            android:drawableEnd="@drawable/eye"
            android:drawablePadding="10dp"
            android:drawableTint="#5a5f73"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:textSize="16dp"
            android:textColor="#5a5f73"
            android:textColorHint="#5a5f73" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmXML"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_state1"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Cancel"
            android:textColor="@color/color_state1"
            android:textSize="18dp" />

    </LinearLayout>
</ScrollView>
