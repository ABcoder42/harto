<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#eff1f7"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/harto_logo"
            android:layout_width="88dp"
            android:layout_height="30dp"
            android:src="@drawable/harto_logo_blue" />

        <TextView
            android:id="@+id/chktxt"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Please check your Mobile data or Internet connection to Verify your Phone Number"
            android:textAlignment="center"
            android:textColor="#5a5f73"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="311dp"
            android:layout_height="49dp"
            android:layout_marginTop="20dp"
            android:autofillHints="Enter 6-digit code"
            android:background="@drawable/edit_txt_bg"
            android:drawableStart="@drawable/check_circle"
            android:drawablePadding="10dp"
            android:drawableTint="#5a5f73"
            android:ems="10"
            android:hint="Enter 6-digit code"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="30dp"
            android:paddingRight="12dp"
            android:paddingBottom="10dp"
            android:textColor="#5a5f73"
            android:textColorHint="#5a5f73"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerifyXML"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginTop="52dp"
            android:background="@drawable/btn_state1"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvResend"
            android:layout_width="156dp"
            android:layout_height="22dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Didn't receive code? Resend"
            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Cancel"
            android:textColor="#5a5f73"
            android:textSize="18dp" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
