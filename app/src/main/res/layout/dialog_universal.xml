<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp"
    android:gravity="center"
    android:background="@drawable/rounded_box"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/dialogImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/bluetooth"
        android:background="@drawable/rounded_box_blue"
        android:padding="15dp"
        app:tint="#ffffff" />

    <TextView
        android:id="@+id/dialogTitle"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#5a5f73"
        android:textSize="20sp"
        android:gravity="center"
        android:textFontWeight="500"
        android:text="Watch Not Connected"
        android:layout_marginBottom="6dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/dialogMessage"
        android:textColor="#5a5f73"
        android:textSize="12sp"
        android:text="Your smartwatch is disconnected. Please reconnect it"
        android:gravity="center"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialogButton"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_state1"
        android:text="OK"
        android:textAllCaps="false"
        android:textColor="@color/white" />
</LinearLayout>